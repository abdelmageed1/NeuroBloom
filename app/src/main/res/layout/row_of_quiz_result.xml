<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp"
    android:paddingVertical="10dp"

    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnRemoveQuizResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCategoryQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRemoveQuizResult"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tvQuizName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvCategoryQuiz"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        />

      <TextView
        android:id="@+id/tvQuizResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuizName"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:padding="5dp"
          />

    <TextView
        android:id="@+id/tvQuizDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuizResult"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        />



    <TextView
        android:id="@+id/tvQuizTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuizDate"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"

        />




</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
