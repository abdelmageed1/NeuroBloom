<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ADHD.UI.StaticAdhdTestFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textInProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="18/20"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@id/progress_bar"
                    app:layout_constraintEnd_toEndOf="@id/progress_bar"
                    app:layout_constraintTop_toTopOf="@id/progress_bar"
                    app:layout_constraintBottom_toBottomOf="@id/progress_bar"

                    />
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tvQAdhd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/cairo_bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                    tools:text="ماذ يقصد ب علوم الحاسب " />



            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <RadioGroup
            android:id="@+id/radio_group_static_adhd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <RadioButton
                android:id="@+id/rbQSAdhdSelect1"
                style="@style/BtnFour"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:fontFamily="@font/cairo"
                android:text="نادراً"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rbQSAdhdSelect2"
                style="@style/BtnFour"
                android:layout_width="match_parent"
                android:checked="false"
                android:fontFamily="@font/cairo"
                android:text="قليلاً"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rbQSAdhdSelect3"
                style="@style/BtnFour"
                android:layout_width="match_parent"
                android:checked="false"
                android:fontFamily="@font/cairo"
                android:text="@string/often_3"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rbSAdhdSelect4"
                style="@style/BtnFour"
                android:layout_width="match_parent"
                android:checked="false"
                android:fontFamily="@font/cairo"
                android:text="@string/always_4"
                android:textAlignment="center" />


        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>